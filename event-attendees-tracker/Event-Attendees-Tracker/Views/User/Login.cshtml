
@{
    Layout =null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link href="~/Content/css/Login_Page.css" rel="stylesheet" />

</head>
<body style="background-image:url('/res/EPAM_winter_party-081_72DPI RGB_.jpg')">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item ">
                <a class="nav-link " href="#">
                    @*<img src="/res/EPAM_LOGO_WhiteAndBlue.png" width="80" height="28" />*@
                </a>
            </li>
        </ul>
    </nav>
    @*<div style="background-image:url('/res/EPAM_winter_party-081_72DPI RGB_.jpg')">*@
    <div class="container" style="background-image:url('/res/EPAM_winter_party-081_72DPI RGB_.jpg')">
        <div class="card">
            @*<img class="card-img" height="875" src="../../res/EPAM_winter_party-081_72DPI RGB_.jpg" alt="Card image">*@
            <div class="card-img-overlay">
                <div id="login">
                    <h3 class="text-center text-white pt-5"></h3>
                    <div class="container">
                        <div id="login-row" class="row justify-content-center align-items-center">
                            <div id="login-column" class="col-md-12">
                                <div id="login-box" class="col-md-8">
                                    <form id="login-form" class="form" action="" method="post">
                                        <h3 class="text-center text-info">Login</h3>
                                        <div class="form-group">
                                            <label id="label1" for="username" class="text-info"></label><br>
                                            <input type="text" name="username" id="username" class="form-control" placeholder="Enter User Name" required>
                                        </div>
                                        <div class="form-group">
                                            <label id="label2" for="password" class="text-info"></label><br>
                                            <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" required>
                                        </div>
                                        <div class="form-group">
                                            <br>
                                            <input type="submit" id="submitcheck" name="submit" class="btn btn-info btn-md" value="Submit">
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>







            </div>
        </div>


    </div>

    <footer id="bottom">© 2020 EPAM Systems, Inc. All Rights Reserved</footer>
</body>

<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
<script src="~/Content/Js/Login_Page.js"></script>


</html>
